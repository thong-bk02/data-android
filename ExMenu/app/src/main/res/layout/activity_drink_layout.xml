<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrinkLayout">

    <CheckBox
        android:id="@+id/nuocduahau"
        android:layout_width="173dp"
        android:layout_height="44dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="32dp"
        android:text="Nước Dưa Hấu"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nuocgao" />

    <CheckBox
        android:id="@+id/nuocgao"
        android:layout_width="173dp"
        android:layout_height="44dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="32dp"
        android:text="Nước Gạo"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pepsi" />

    <CheckBox
        android:id="@+id/pepsi"
        android:layout_width="173dp"
        android:layout_height="44dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="32dp"
        android:text="Pepsi"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cocacola" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="56dp"
        android:text="Danh Sách Đồ Uống"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/nuoccam"
        android:layout_width="173dp"
        android:layout_height="44dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="32dp"
        android:text="Nước Cam"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <CheckBox
        android:id="@+id/cocacola"
        android:layout_width="173dp"
        android:layout_height="44dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="28dp"
        android:text="Coca Cola"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nuoccam" />

    <Button
        android:id="@+id/btndrinkexit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="32dp"
        android:text="Về trang chủ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nuocduahau" />

</androidx.constraintlayout.widget.ConstraintLayout>