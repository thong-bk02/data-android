<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodLayout">

    <CheckBox
        android:id="@+id/thitbo"
        android:layout_width="173dp"
        android:layout_height="44dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="32dp"
        android:text="Thịt bò"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thitlon" />

    <CheckBox
        android:id="@+id/thitlon"
        android:layout_width="173dp"
        android:layout_height="44dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="32dp"
        android:text="Thịt Lợn"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thitmeo" />

    <CheckBox
        android:id="@+id/thitmeo"
        android:layout_width="173dp"
        android:layout_height="44dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="32dp"
        android:text="Thịt mèo"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thitga" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="56dp"
        android:text="Danh Sách Thức Ăn"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/thittrau"
        android:layout_width="173dp"
        android:layout_height="44dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="36dp"
        android:text="Thịt trâu"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <CheckBox
        android:id="@+id/thitga"
        android:layout_width="173dp"
        android:layout_height="44dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="32dp"
        android:text="Thịt gà"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thittrau" />

    <Button
        android:id="@+id/btnfoodexit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="16dp"
        android:text="Về trang chủ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thitbo" />


</androidx.constraintlayout.widget.ConstraintLayout>